# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# リンク一覧
GET     /                           controllers.Application.index()

# ユーザ一覧
GET     /calendar/master/user       controllers.UserList.index()
GET     /calendar/master/user/add  controllers.UserList.add()

# ユーザ編集
#GET     /calendar/master/user/edit/:ユーザID

# スタンプマスタ一覧
GET     /calendar/master/stamp       controllers.StampList.index()
#GET     /calendar/master/stamp/add
#GET     /calendar/master/stamp/edit/:スタンプID

# 祝日マスタ管理
GET     /calendar/master/holiday       controllers.HolidayList.index()
GET     /calendar/master/holiday/add       controllers.HolidayList.add()
POST     /calendar/master/holiday/add       controllers.HolidayList.completion()
POST     /calendar/master/holiday/delete       controllers.HolidayList.delete()


# 月間カレンダー
#GET     /calendar/month
#GET     /calendar/month/:ユーザID

# 週間カレンダー
#GET     /calendar/week
#GET     /calendar/week/:ユーザID

# スタンプ押す
#GET     /calendar/stamp/:ユーザID

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
